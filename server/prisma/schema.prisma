// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  name     String   @db.VarChar(150)
  avatar   String
  password String
  isAdmin  Boolean  @default(false)
  reviews  Review[]
}

model Mobile {
  id                String             @id @default(uuid()) @db.Uuid
  name              String             @unique
  brand             String             @db.VarChar(180)
  stars             Float
  reviewCount       Int
  mrp               Float
  discount          Float
  fulfilled         Boolean            @default(true)
  deliveryDays      Int                @default(7)
  mobileDescription MobileDescription?
  reviews           Review[]
}

model MobileDescription {
  os           String   @db.VarChar(20)
  ram          Float
  dimension    Float[]
  batteryPower Int
  storage      Int
  rearCamera   Int
  frontCamera  Int
  manufacturer String   @db.VarChar(50)
  about        String[]
  color        String   @db.VarChar(50)
  mobileId     String   @id @unique @db.Uuid
  mobile       Mobile   @relation(fields: [mobileId], references: [id])
}

model Review {
  id        Int      @id @default(autoincrement())
  rating    Int
  title     String
  text      String
  createdAt DateTime @default(now())
  mobileId  String   @db.Uuid
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  mobile    Mobile   @relation(fields: [mobileId], references: [id])
}
